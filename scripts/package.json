{
  "name": "neptino-bem-tools",
  "version": "1.0.0",
  "description": "BEM convention validator and auto-fixer for the Neptino codebase",
  "type": "commonjs",
  "main": "bem-validator.js",
  "bin": {
    "bem-validator": "./bem-validator.js"
  },
  "scripts": {
    "bem:check": "node bem-validator.js src",
    "bem:fix": "node bem-validator.js src --fix",
    "bem:watch": "node bem-validator.js src --watch"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "fast-glob": "^3.3.2",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.38",
    "postcss-scss": "^4.0.9",
    "postcss-selector-parser": "^6.0.15"
  }
}
