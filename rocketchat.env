# Rocket.Chat Environment Configuration
# Copy this to .env and modify as needed

# Basic Configuration
ROOT_URL=http://localhost:3100
PORT=3000
HOST_PORT=3100

# MongoDB Configuration
MONGODB_HOST_PATH=./mongodb_data
MONGODB_REPLICA_SET_MODE=primary
MONGODB_REPLICA_SET_NAME=rs0
MONGODB_PORT_NUMBER=27017
MONGODB_BIND_IP=127.0.0.1

# Traefik Configuration (for reverse proxy)
DOMAIN=localhost
TRAEFIK_PROTOCOL=http
TRAEFIK_HTTP_PORT=8090
TRAEFIK_HTTPS_PORT=8443
TRAEFIK_DASHBOARD_PORT=8091
TRAEFIK_API_INSECURE=true

# Let's Encrypt (disabled for local development)
LETSENCRYPT_ENABLED=false
LETSENCRYPT_EMAIL=admin@localhost

# Metrics
METRICS_PORT=9458

# Image and Version Configuration
IMAGE=registry.rocket.chat/rocketchat/rocket.chat
RELEASE=latest
MONGODB_VERSION=7.0
NATS_VERSION=2.11-alpine
TRAEFIK_RELEASE=v3.4
