{
  "name": "neptino",
  "version": "1.0.0",
  "description": "An interactive learning experience platform designed for seamless education delivery",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "vite --port 3000 --host 0.0.0.0",
    "dev:strict": "vite --host localhost --port 3000 --strictPort",
    "dev:monitor": "node scripts/dev-monitor.js",
    "build": "vite build",
    "build:analyze": "ANALYZE=1 vite build && node scripts/analyze-bundle.js",
    "preview": "vite preview",
    "start": "npm run dev",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,scss,css,html}\"",
    "clean": "rm -rf dist node_modules/.vite",
    "reset": "npm run clean && npm install && npm run dev",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "fonts:generate": "node scripts/generate-bitmap-fonts.js"
  },
  "keywords": [
    "education",
    "learning-platform",
    "typescript",
    "scss",
    "educational-technology"
  ],
  "author": "Benjamin Jack Laubacher",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "canvas": "^3.2.0",
    "eslint": "^8.45.0",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.90.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/[your-username]/neptino.git"
  },
  "bugs": {
    "url": "https://github.com/[your-username]/neptino/issues"
  },
  "homepage": "https://github.com/[your-username]/neptino#readme",
  "dependencies": {
    "@pixi/devtools": "^2.0.1",
    "@pixi/layout": "^3.1.0",
    "@supabase/supabase-js": "^2.54.0",
    "pixi.js": "^8.12.0",
    "spectorjs": "^0.9.30",
    "yoga-layout": "^3.2.1"
  }
}
