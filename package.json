{
  "name": "neptino",
  "version": "1.0.0",
  "description": "An interactive learning experience platform designed for seamless education delivery",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "./start-dev.sh",
    "dev:strict": "BROWSER=none BROWSER_NO_OPEN=1 vite --host localhost --port 3000 --strictPort",
    "dev:manual": "BROWSER=none vite --port 3000 --host 0.0.0.0",
    "dev:monitor": "node scripts/dev-monitor.js",
    "dev:oauth": "tsx src/scripts/backend/oauth/start-server.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:oauth\"",
    "build": "vite build",
    "build:analyze": "ANALYZE=1 vite build && node scripts/analyze-bundle.js",
    "preview": "vite preview",
    "start": "npm run dev",
    "test": "playwright test",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "clean": "rm -rf dist node_modules/.vite",
    "reset": "npm run clean && npm install && npm run dev",
    "fonts:generate": "node scripts/generate-bitmap-fonts.js"
  },
  "keywords": [
    "education",
    "learning-platform",
    "typescript",
    "tailwindcss",
    "educational-technology"
  ],
  "author": "Benjamin Jack Laubacher",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jquery": "^3.5.33",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.8.1",
    "@types/select2": "^4.0.63",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "canvas": "^3.2.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "open": "^10.2.0",
    "prettier": "^3.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "svg-path-parser": "^1.1.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/[your-username]/neptino.git"
  },
  "bugs": {
    "url": "https://github.com/[your-username]/neptino/issues"
  },
  "homepage": "https://github.com/[your-username]/neptino#readme",
  "dependencies": {
    "@huggingface/transformers": "^3.7.5",
    "@pixi/devtools": "^2.0.1",
    "@pixi/layout": "^3.1.0",
    "@supabase/supabase-js": "^2.54.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jose": "^6.1.0",
    "jquery": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.5.1",
    "node-cache": "^5.1.2",
    "pdfjs-dist": "^4.6.82",
    "pixi-viewport": "^6.0.3",
    "pixi.js": "^8.13.0",
    "read-excel-file": "^5.8.0",
    "select2": "^4.1.0-rc.0",
    "spectorjs": "^0.9.30",
    "yoga-layout": "^3.2.1"
  }
}
